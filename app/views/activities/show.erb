<div>
  <h4>
    <a href="/activities/<%= @activity.id %>">
      <%= @activity.generate_story %>
    </a>
  </h4>
</div>

<% if @activity.user_id == current_user.id %>
  <a href="/activities/<%= @activity.id %>/edit">
    <button class="btn btn-success" type="button">Edit activity</button>
  </a>

  <form class="" action="/activities/<%= @activity.id %>/delete" method="post">
    <input type="hidden" name="_method" value="DELETE">
    <button class="btn btn-danger" type="submit">Delete activity</button>
  </form>
<% end %>
